{
  "extends": "../../tsconfig.base.json",                /* Extend the base TypeScript configuration. */
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,                             /* Enables emit interoperability between CommonJS and ES Modules. */
    "incremental": true,
    "baseUrl": ".",                                     /* Base directory to resolve non-relative module names. */
    "paths": {
      "@/*": ["./src/*"],                               /* Path mapping for app module. */
      "@app/*": ["./*"],                                /* Path mapping for app module. */
    }
  },
  "include": [
    "./src",                                       /* Include the src directory. */
    "./src/**/*.ts",                               /* Include all TypeScript files in the src directory. */
    "./**/*.ts",                                  /* Include all TypeScript files in the src directory. */
    "./**/*.json"                                 /* Include all JSON files in the src directory. */
  ],
}
